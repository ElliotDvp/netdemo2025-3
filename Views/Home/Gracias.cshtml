@{
    ViewData["Title"] = "¡Gracias!";
}

<style>
    body {
        background: url('https://img.freepik.com/foto-gratis/collaje-fondo-pelicula_23-2149876003.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
        color: white;
    }
    body::before {
        content: "";
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.6);
        z-index: -1;
    }
    .thank-you-container {
        margin-top: 100px;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.1);
        padding: 40px;
        border-radius: 15px;
        width: 600px;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 4px 10px rgba(0,0,0,0.5);
    }
    h1 {
        color: #FFD700;
        font-size: 2.5rem;
    }
    p {
        font-size: 1.2rem;
        margin-top: 15px;
    }
    .btn-primary {
        margin-top: 25px;
        padding: 10px 20px;
        background-color: #FFD700;
        color: black;
        border: none;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
        transition: background 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #FFC107;
    }
</style>

<div class="thank-you-container">
    <h1>¡Gracias por tu sugerencia!</h1>
    <p>Pronto revisaremos y agregaremos tu película a nuestro catálogo.</p>
    <a href="/" class="btn-primary">Volver al inicio</a>
</div>

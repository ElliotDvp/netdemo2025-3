@model netdemo20252.Models.Sugerencia
@{
    ViewData["Title"] = "Sugerencias";
}

<style>
    body {
        background: url('https://img.freepik.com/foto-gratis/collaje-fondo-pelicula_23-2149876003.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
        color: white;
    }
    body::before {
        content: "";
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.6);
        z-index: -1;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.1);
        padding: 30px;
        border-radius: 10px;
        width: 400px;
        margin: 50px auto;
        box-shadow: 0 4px 10px rgba(0,0,0,0.5);
    }
    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #FFD700;
    }
    .form-control {
        margin-bottom: 15px;
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
    }
    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }
    button {
        width: 100%;
        padding: 10px;
        background-color: #FFD700;
        border: none;
        color: black;
        font-weight: bold;
        border-radius: 5px;
        transition: background 0.3s ease;
    }
    button:hover {
        background-color: #FFC107;
    }
</style>

<div class="form-container">
    <h1>Formulario de Sugerencias</h1>
    <div>
        <form asp-action="Registrar" asp-controller="Home" method="post">
            <div>
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Categoria"></label>
                <input asp-for="Categoria" class="form-control" placeholder="Ej. Acción, Comedia..." />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Describe la película sugerida" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <button type="submit">Enviar</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
